# Prompt with git branch name
# set variable identifying the chroot you work in (used in the prompt below)
if [ -z "$debian_chroot" ] && [ -r /etc/debian_chroot ]; then
    debian_chroot=$(cat /etc/debian_chroot)
fi
PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]$(__git_ps1 "(\033[1;31m%s\033[m)")\$ '

# Colored Terminal
force_color_prompt=yes

# Disable Firefox pango
export MOZ_DISABLE_PANGO=1

# Aliases
if [ -f ~/devel/dotfiles/bash/.fett_aliases ]; then
    . ~/devel/dotfiles/bash/.fett_aliases
fi

# Devel - Python / Ruby
if [ -f ~/devel/dotfiles/bash/.fett_devel ]; then
    . ~/devel/dotfiles/bash/.fett_devel
fi
